						"id": resp.photo[i].file_id,
						"peso": resp.photo[i].file_size,
						"path": resp.photo[i].file_path,
						"anchura": resp.photo[i].width,
						"altura": resp.photo[i].height
					})
				sino
					lista.agregar(respuesta.foto, {
						"id": resp.photo[i].file_id,
						"peso": resp.photo[i].file_size,
