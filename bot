		fin

		resp = msj.reply_to_message
		global respuesta = {
			"texto": resp.text,
			"fecha": resp.date,
			"id": resp.message_id,
			"chat": {
				"tipo": resp.chat.type,
				"id": resp.chat.id,
				"usuario": resp.chat.username,
				"nombre": resp.chat.first_name,
				"apellido": resp.chat.last_name
			},
			"sticker": {
