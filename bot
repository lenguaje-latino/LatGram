			desde (i=0;i<msj.photo;i++)
				si msj.photo[i].file_path
					lista.agregar(msg.foto, {
						"id": msj.photo[i].file_id,
						"peso": msj.photo[i].file_size,
						"path": msj.photo[i].file_path,
						"anchura": msj.photo[i].width,
						"altura": msj.photo[i].height
					})
				sino
					lista.agregar(msg.foto, {
						"id": msj.photo[i].file_id,
						"peso": msj.photo[i].file_size,
						"anchura": msj.photo[i].width,
						"altura": msj.photo[i].height
					})
